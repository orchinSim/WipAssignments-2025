<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>assign2Servlet</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.xhtml</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.xhtml</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>form</servlet-name>
  	<servlet-class>assign2Servlet.Ser2</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>form</servlet-name>
  	<url-pattern>/loginForm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>Servlet2</servlet-name>
  	<servlet-class>assign2Servlet.LoginSuccess</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Servlet2</servlet-name>
  	<url-pattern>/success</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>Servlet3</servlet-name>
  	<servlet-class>assign2Servlet.LoginFailed</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Servlet3</servlet-name>
  	<url-pattern>/failed</url-pattern>
  </servlet-mapping>
</web-app>